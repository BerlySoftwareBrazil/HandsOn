    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>-->
    @ViewBag.SuspectId
    @ViewBag.PlaceId
    @ViewBag.WeaponId
</div>
<div class="">

</div>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger"})
    @Html.Hidden("SuspectId")
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2" for="Suspects">Suspeitos: </label>
            <div class="col-md-10">
                @Html.DropDownList("Suspects", null, "Selecione", htmlAttributes: new { @class = "form-control" })
            </div>

        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="Places">Locais: </label>
            <div class="col-md-10">
                @Html.DropDownList("Places", null, "Selecione", htmlAttributes: new { @class = "form-control" })
            </div>

        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="Weapons">Armas: </label>
            <div class="col-md-10">
                @Html.DropDownList("Weapons", null, "Selecione", htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirmar" class="btn btn-default"/>
            </div>
        </div>
    </div>
}
