@model IEnumerable<HandsOn.Web.ViewModels.CrimeSceneData>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("SuspectId", null, new { suspectId = ViewBag.SuspectId })
    @Html.Hidden("WeaponId", null, new { weaponId = ViewBag.WeaponId })
    @Html.Hidden("PlaceId", null, new { placeId = ViewBag.PlaceId })
    @Html.ValidationSummary(true, "", new { @class = "text-danger"})
    <b>@ViewBag.SuspectId</b><br /><b>@ViewBag.WeaponId</b><br /><b>@ViewBag.PlaceId</b>

    <div class="form-group">

        <label class="control-label col-md-2">Suspeito</label>
        <div class="col-md-10">
            @Html.DropDownList("SelectedSuspects", "Selecione")
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Local</label>
        <div class="col-md-10">
            @Html.DropDownList("SelectedPlaces", "Selecione")
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Arma</label>
        <div class="col-md-10">
            @Html.DropDownList("SelectedWeapons", "Selecione")
        </div>
    </div>
    <input type="submit" value="Verificar Suspeito" class="btn-default" />
}